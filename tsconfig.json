{
  "compilerOptions": {
    "skipLibCheck": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "isolatedModules": false,
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "outDir": "./dist"
  },
  "include": ["./**/*.ts"],
  "ts-node": {
    "esm": true
  }
}
